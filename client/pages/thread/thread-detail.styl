@import '../../styles/_variable.styl'

.thread-detail
  &__header
  &__content
    .meta-info
      margin-bottom 0px
      &__user
        font-weight bold
      &__date
        font-style italic
    header
      h3
        margin-top 12px
        text-decoration underline
        font-size 1.3em
    content
      font-size 0.8em
      text-align justify
      text-indent 1.5em
  &__comment
    .detail-comment
      h3
        border-bottom 1px solid $grey-6
        width 50%
        font-size 1em
      &__list
        width 50%
        height 250px
        overflow scroll
        background white
        border-radius 6px
        padding 3px 12px
        .comment-item
          padding 3px 0px
          border-bottom 0
          &__icon
            font-size 32px
            padding-top 24px
          &__title
            font-size 1em
            font-weight bolder
          &__desc
            .desc
              &-text
                font-size 0.9em
                margin-bottom 0
                background-color $green-6
                display inline-block
                color white
                padding 6px
                border-radius 3px
              &-createdat
                font-size 0.8em
                font-style italic
                margin-bottom 0
      &__form
        color white