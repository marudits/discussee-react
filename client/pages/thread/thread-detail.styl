@import '../../styles/_variable.styl'

.thread-detail
  &__header
  &__content
    .meta-info
      margin-bottom 0px
      &__user
        font-weight bold
      &__date
        font-style italic
    header
      h3
        margin-top 12px
        text-decoration underline
        font-size 1.3em
    content
      font-size 0.8em
      text-align justify
      text-indent 1.5em
  &__comment
    .detail-comment
      h3
        border-bottom 1px solid $grey-6
        max-width 600px
        font-size 1em
      &__list
        max-width 600px
        height 250px
        overflow scroll
        background white
        border-radius 3px
        border 1px solid $grey-5
        padding 3px 12px
        .comment-item
          padding 3px 0px
          border-bottom 0
          margin-bottom 6px
          .ant-list-item
            padding-top 6px
            padding-bottom 6px
          &__own
            float right
            width 100%
            .ant-list-item-meta
              margin-left 40% !important
              width 100%
              text-align right
              .desc-text
                background-color $blue-4

          &__other
            float left
            width 100%
            .ant-list-item-meta
              margin-right 40% !important
              width 100%
              text-align left
              h4
                a
                  color $green-7
              .desc-text
                background-color $green-6
              &-avatar
                margin-right 0

          h4
            margin-bottom 0px
          &__icon
            font-size 30px
            padding-top 22px
          &__title
            font-size 1em
            font-weight bolder
          &__date
            font-size 0.8em
            margin-left 6px
            margin-bottom 0
          &__desc
            .desc
              &-text
                font-size 0.9em
                margin-bottom 0
                display inline-block
                color white
                padding 3px 6px
                border-radius 3px
      &__form
        margin-top 6px
        padding-top 6px
        border-top 1px solid $grey-6
        max-width 600px
      .ant-divider
        font-size 0.6em
        text-transform uppercase